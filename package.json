{
  "name": "xhs-knowledge-publisher",
  "version": "2.0.0",
  "description": "私有知识库管理和小红书文案发布系统 - Monorepo架构",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=packages/server",
    "dev:client": "npm run dev --workspace=packages/client",
    "dev:dashboard": "npm run dev --workspace=packages/dashboard",
    "start": "npm run start --workspace=packages/server",
    "start:client": "npm run start --workspace=packages/client",
    "build": "npm run build --workspaces",
    "build:client": "npm run build --workspace=packages/client",
    "build:dashboard": "npm run build --workspace=packages/dashboard",
    "install:all": "npm install && npm install --workspaces"
  },
  "keywords": [
    "xiaohongshu",
    "knowledge-base",
    "ai",
    "content-generation",
    "electron",
    "monorepo"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "typescript": "^5.3.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0"
  }
}
